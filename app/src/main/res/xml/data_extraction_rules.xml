<?xml version="1.0" encoding="utf-8"?><!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!--
        Exclude the large model files stored in the app's internal file directory
        from being backed up to the cloud. This prevents excessive data usage and backup failures.
        Only SharedPreferences will be backed up.
        -->
        <exclude domain="file" />
        <include domain="sharedpref" path="."/>
    </cloud-backup>
    <device-transfer>
        <!--
        For device-to-device transfers, we can include the model file
        so the user doesn't have to re-download it on a new device.
        -->
        <include domain="file" />
        <include domain="sharedpref" path="."/>
    </device-transfer>
</data-extraction-rules>